<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:core="clr-namespace:RoofSheetMaster.Core;assembly=RoofSheetMaster.Core"
        xmlns:views="clr-namespace:RoofSheetMaster.Desktop.Views;assembly=RoofSheetMaster.Desktop"
        x:Class="RoofSheetMaster.Desktop.MainWindow"
        Width="1200"
        Height="700"
        Title="RoofSheetMaster"
        Icon="avares://RoofSheetMaster.Desktop/Assets/roof.png">

    <Grid Margin="4" RowDefinitions="Auto,*">

        <!-- TOP MENU -->
        <Menu Grid.Row="0">
            <Menu.Styles>
                <!-- SAFE STYLE: all MenuItem text bold -->
                <Style Selector="MenuItem">
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
            </Menu.Styles>

            <MenuItem Header="_File">
                <MenuItem Header="_Save Project..."
                          Click="OnSaveProjectClick" />
                <MenuItem Header="_Load Project..."
                          Click="OnLoadProjectClick" />

                <Separator />

                <MenuItem Header="Export _Sheets CSV"
                          Click="OnExportSheetSummaryCsvClick" />
                <MenuItem Header="Export _Panels CSV"
                          Click="OnExportPanelsCsvClick" />
                <MenuItem Header="Export _Flashings CSV"
                          Click="OnExportFlashingsCsvClick" />

                <Separator />

                <MenuItem Header="Export cut _list (HTML)"
                          Click="OnExportCutListHtmlClick" />

                <MenuItem Header="Export layout _image (PNG)"
                          Click="OnExportLayoutPngClick" />
            </MenuItem>
        </Menu>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1" ColumnDefinitions="420,*" RowDefinitions="*">

            <!-- LEFT COLUMN -->
            <Grid Grid.Column="0" Margin="6">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid RowDefinitions="Auto,*">

                        <!-- Roof inputs box -->
                        <Border Grid.Row="0"
                                Padding="10"
                                Margin="0,0,0,10"
                                BorderThickness="1"
                                BorderBrush="#FF3A6EA5"
                                Background="#FFEFF7FF">

                            <StackPanel>

                                <!-- LOGO + HEADER -->
                                <StackPanel Orientation="Horizontal"
                                            Margin="0,0,0,8">
                                    <Image Source="avares://RoofSheetMaster.Desktop/Assets/roof.png"
                                           Width="24"
                                           Height="24"
                                           Margin="0,0,6,0" />
                                    <TextBlock Text="Roof inputs"
                                               FontWeight="Bold"
                                               VerticalAlignment="Center"
                                               Foreground="#FF1F4F7A"/>
                                </StackPanel>

                                <!-- INPUT GRID -->
                                <Grid ColumnDefinitions="Auto,*"
                                      RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
                                      Margin="0,0,10,0">

                                    <TextBlock Grid.Row="0" Grid.Column="0"
                                               Text="Units"
                                               VerticalAlignment="Center"
                                               Margin="0,0,5,0" />
                                    <ComboBox x:Name="UnitsComboBox"
                                              Grid.Row="0" Grid.Column="1"
                                              MinWidth="120"
                                              HorizontalAlignment="Stretch"
                                              SelectedIndex="1"
                                              Margin="0,4,0,0">
                                        <ComboBoxItem Content="Metric (m)" />
                                        <ComboBoxItem Content="Imperial (ft)" />
                                    </ComboBox>

                                    <TextBlock Grid.Row="1" Grid.Column="0"
                                               Text="Roof type"
                                               VerticalAlignment="Center"
                                               Margin="0,0,5,0" />
                                    <ComboBox x:Name="RoofTypeComboBox"
                                              Grid.Row="1" Grid.Column="1"
                                              MinWidth="120"
                                              HorizontalAlignment="Stretch"
                                              SelectedIndex="0"
                                              Margin="0,4,0,0">
                                        <ComboBoxItem Content="Single face" />
                                        <ComboBoxItem Content="Gable roof" />
                                        <ComboBoxItem Content="Hip roof (4 faces same)" />
                                        <ComboBoxItem Content="Valley roof (2 faces same)" />
                                    </ComboBox>

                                    <TextBlock Grid.Row="2" Grid.Column="0"
                                               Text="Roof length (along eave)"
                                               Margin="0,5,5,0" />
                                    <TextBox x:Name="RoofLengthTextBox"
                                             Grid.Row="2" Grid.Column="1"
                                             MinWidth="120"
                                             HorizontalAlignment="Stretch"
                                             Text="40"
                                             Margin="0,5,0,0"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0"
                                               Text="Roof width (eave to ridge, horizontal)"
                                               Margin="0,5,5,0" />
                                    <TextBox x:Name="RoofWidthTextBox"
                                             Grid.Row="3" Grid.Column="1"
                                             MinWidth="120"
                                             HorizontalAlignment="Stretch"
                                             Text="15"
                                             Margin="0,5,0,0"/>

                                    <TextBlock Grid.Row="4" Grid.Column="0"
                                               Text="Roof angle (degrees)"
                                               Margin="0,5,5,0" />
                                    <TextBox x:Name="RoofAngleTextBox"
                                             Grid.Row="4" Grid.Column="1"
                                             MinWidth="120"
                                             HorizontalAlignment="Stretch"
                                             Text="26.565"
                                             Margin="0,5,0,0"/>

                                    <TextBlock Grid.Row="5" Grid.Column="0"
                                               Text="Sheet width"
                                               Margin="0,5,5,0" />
                                    <TextBox x:Name="SheetWidthTextBox"
                                             Grid.Row="5" Grid.Column="1"
                                             MinWidth="120"
                                             HorizontalAlignment="Stretch"
                                             Text="3"
                                             Margin="0,5,0,0"/>

                                    <TextBlock Grid.Row="6" Grid.Column="0"
                                               Text="Sheet overlap"
                                               Margin="0,5,5,0" />
                                    <TextBox x:Name="SheetOverlapTextBox"
                                             Grid.Row="6" Grid.Column="1"
                                             MinWidth="120"
                                             HorizontalAlignment="Stretch"
                                             Text="0.125"
                                             Margin="0,5,0,0"/>

                                    <TextBlock Grid.Row="7" Grid.Column="0"
                                               Text="Ridge gap"
                                               Margin="0,5,5,0" />
                                    <TextBox x:Name="RidgeGapTextBox"
                                             Grid.Row="7" Grid.Column="1"
                                             MinWidth="120"
                                             HorizontalAlignment="Stretch"
                                             Text="0"
                                             Margin="0,5,0,0"/>

                                    <TextBlock Grid.Row="8" Grid.Column="0"
                                               Text="Sheet length rounding"
                                               Margin="0,5,5,0" />
                                    <TextBox x:Name="SheetLengthRoundingTextBox"
                                             Grid.Row="8" Grid.Column="1"
                                             MinWidth="120"
                                             HorizontalAlignment="Stretch"
                                             Text="0"
                                             ToolTip.Tip="0 = no rounding. Example: 0.125 for 1/8, 0.01 for 1 cm or 0.01 m."
                                             Margin="0,5,0,0"/>

                                    <Button x:Name="CalculateButton"
                                            Grid.Row="9" Grid.Column="0"
                                            Content="Calculate"
                                            Width="120"
                                            Margin="0,10,5,0"
                                            Click="OnCalculateClick" />

                                    <TextBlock x:Name="ResultSummaryTextBlock"
                                               Grid.Row="9" Grid.Column="1"
                                               Margin="0,10,0,0"
                                               FontWeight="Bold"
                                               TextWrapping="Wrap"
                                               Foreground="#FF1F4F7A"/>
                                </Grid>

                                <CheckBox x:Name="FaceOverridesCheckBox"
                                          Content="Enable per-face overrides (hip / valley only)"
                                          Margin="0,12,0,4"
                                          IsChecked="False"
                                          Checked="OnFaceOverridesToggle"
                                          Unchecked="OnFaceOverridesToggle" />

                                <StackPanel x:Name="FaceOverridesPanel"
                                            IsVisible="False">

                                    <TextBlock Text="Leave blank to use the main roof length/width above."
                                               Margin="0,0,0,6"
                                               FontSize="11"
                                               Foreground="#FF555555" />

                                    <Grid ColumnDefinitions="Auto,*,*"
                                          RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto">

                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                   Text="Hip FrontLeft"
                                                   Margin="0,2,5,0" />
                                        <TextBox x:Name="HipFrontLeftLengthTextBox"
                                                 Grid.Row="0" Grid.Column="1"
                                                 Margin="0,2,5,0"
                                                 Watermark="Length" />
                                        <TextBox x:Name="HipFrontLeftWidthTextBox"
                                                 Grid.Row="0" Grid.Column="2"
                                                 Margin="0,2,0,0"
                                                 Watermark="Width" />

                                        <TextBlock Grid.Row="1" Grid.Column="0"
                                                   Text="Hip FrontRight"
                                                   Margin="0,2,5,0" />
                                        <TextBox x:Name="HipFrontRightLengthTextBox"
                                                 Grid.Row="1" Grid.Column="1"
                                                 Margin="0,2,5,0"
                                                 Watermark="Length" />
                                        <TextBox x:Name="HipFrontRightWidthTextBox"
                                                 Grid.Row="1" Grid.Column="2"
                                                 Margin="0,2,0,0"
                                                 Watermark="Width" />

                                        <TextBlock Grid.Row="2" Grid.Column="0"
                                                   Text="Hip BackLeft"
                                                   Margin="0,2,5,0" />
                                        <TextBox x:Name="HipBackLeftLengthTextBox"
                                                 Grid.Row="2" Grid.Column="1"
                                                 Margin="0,2,5,0"
                                                 Watermark="Length" />
                                        <TextBox x:Name="HipBackLeftWidthTextBox"
                                                 Grid.Row="2" Grid.Column="2"
                                                 Margin="0,2,0,0"
                                                 Watermark="Width" />

                                        <TextBlock Grid.Row="3" Grid.Column="0"
                                                   Text="Hip BackRight"
                                                   Margin="0,2,5,0" />
                                        <TextBox x:Name="HipBackRightLengthTextBox"
                                                 Grid.Row="3" Grid.Column="1"
                                                 Margin="0,2,5,0"
                                                 Watermark="Length" />
                                        <TextBox x:Name="HipBackRightWidthTextBox"
                                                 Grid.Row="3" Grid.Column="2"
                                                 Margin="0,2,0,0"
                                                 Watermark="Width" />

                                        <TextBlock Grid.Row="4" Grid.Column="0"
                                                   Text="Valley Upper"
                                                   Margin="0,8,5,0" />
                                        <TextBox x:Name="ValleyUpperLengthTextBox"
                                                 Grid.Row="4" Grid.Column="1"
                                                 Margin="0,8,5,0"
                                                 Watermark="Length" />
                                        <TextBox x:Name="ValleyUpperWidthTextBox"
                                                 Grid.Row="4" Grid.Column="2"
                                                 Margin="0,8,0,0"
                                                 Watermark="Width" />

                                        <TextBlock Grid.Row="5" Grid.Column="0"
                                                   Text="Valley Lower"
                                                   Margin="0,2,5,0" />
                                        <TextBox x:Name="ValleyLowerLengthTextBox"
                                                 Grid.Row="5" Grid.Column="1"
                                                 Margin="0,2,5,0"
                                                 Watermark="Length" />
                                        <TextBox x:Name="ValleyLowerWidthTextBox"
                                                 Grid.Row="5" Grid.Column="2"
                                                 Margin="0,2,0,0"
                                                 Watermark="Width" />

                                    </Grid>
                                </StackPanel>

                            </StackPanel>
                        </Border>

                        <!-- Materials view -->
                        <views:MaterialsView x:Name="MaterialsViewControl"
                                             Grid.Row="1" />

                    </Grid>
                </ScrollViewer>
            </Grid>

            <!-- RIGHT COLUMN -->
            <Border Grid.Column="1"
                    Margin="6"
                    Padding="10,10,20,10"
                    BorderThickness="1"
                    BorderBrush="#FF3A6EA5"
                    Background="#FFFFFFFF">

                <Grid RowDefinitions="Auto,*,Auto">

                    <StackPanel Grid.Row="0"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <TextBlock Text="Roof layout (diagram)"
                                   FontWeight="Bold"
                                   Margin="0,0,0,8"
                                   Foreground="#FF1F4F7A"/>

                        <TextBlock Text="Zoom:"
                                   Margin="20,0,4,0"
                                   VerticalAlignment="Center" />

                        <Slider x:Name="ZoomSlider"
                                Minimum="0.5"
                                Maximum="3"
                                Value="1"
                                Width="150"
                                TickFrequency="0.25"
                                IsSnapToTickEnabled="True"
                                ValueChanged="OnZoomSliderValueChanged"
                                VerticalAlignment="Center" />

                        <TextBlock Margin="6,0,0,0"
                                   VerticalAlignment="Center"
                                   Text="{Binding #ZoomSlider.Value, StringFormat='{}{0:0.0}Ã—'}" />
                    </StackPanel>

                    <ScrollViewer Grid.Row="1"
                                  HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto">
                        <Canvas x:Name="DiagramCanvas"
                                Background="#FFF8F8F8"
                                MinWidth="600"
                                MinHeight="400" />
                    </ScrollViewer>

                    <TextBlock Grid.Row="2"
                               Margin="0,6,0,0"
                               FontSize="11"
                               Foreground="#FF666666"
                               Text="Use zoom to inspect panel layout. Scrollbars appear when zoomed in." />

                </Grid>
            </Border>

        </Grid>
    </Grid>
</Window>
